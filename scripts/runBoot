#!/bin/bash
#DO NOT EDIT THIS FILE.  IT IS MAINTAINED THROUGH EROS.
#Author: David Gitz
#Purpose: Runs Boot Scripts
source /home/robot/scripts/simple_logger.sh


function run_boot()
{
    cd /home/robot/
    for filename in "/home/robot/boot"/*
    do
        log_message "Running:"$filename
        eval $filename
        sleep 2
    done
}
function print_usage()
{
    echo "Usage Instructions: runBoot"
    echo "No Options: This Menu"
    echo "-?/-h This Menu"
    echo "-d <hostname> Run boot scripts on this hostname.  Note: This program only works when ran locally."
    exit
}
if [ -z "$1" ]
then
   print_usage
   exit
fi
while getopts ":?hd:" options; do
    case $options in
        d) run_boot $OPTARG;;
        *) print_usage ;;
    esac
done

